{
  "variables": {
    "disk_size": "8192",
    "version": "12",
    "iso_url": "https://cdimage.debian.org/cdimage/bookworm_di_rc1/amd64/iso-cd/debian-bookworm-DI-rc1-amd64-netinst.iso",
    "iso_checksum": "sha256:da866b6958096e89200ba73002dd1c45bbbcde65845e129e10df6e0b03ab3884",
    "esxi_host": "esxi.test",
    "esxi_username": "root",
    "esxi_password": "HeyH0Password!",
    "esxi_datastore": "datastore1",
    "esxi_network": "VM Network"
  },
  "builders": [
    {
      "name": "debian-{{user `version`}}-amd64-esxi",
      "type": "vmware-iso",
      "version": "18",
      "guest_os_type": "debian11-64",
      "headless": true,
      "http_directory": ".",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "disk_adapter_type": "pvscsi",
      "tools_upload_flavor": "",
      "format": "vmx",
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_host`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "skip_export": true,
      "keep_registered": true,
      "vnc_over_websocket": true,
      "network_adapter_type": "vmxnet3",
      "cpus": 4,
      "cores": 4,
      "memory": 2048,
      "network_name": "{{user `esxi_network`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "60m",
      "boot_wait": "15s",
      "boot_command": [
        "<tab>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install.amd/vmlinuz initrd=/install.amd/initrd.gz",
        " auto=true",
        " priority=critical",
        " url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.txt",
        " hostname=vagrant",
        " domain=home",
        " net.ifnames=0",
        " fb=false",
        " BOOT_DEBUG=2",
        " DEBCONF_DEBUG=5",
        "<enter>"
      ],
      "shutdown_command": "echo vagrant | sudo -S poweroff"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "echo vagrant | sudo -S bash {{.Path}}",
      "scripts": [
        "provision-guest-additions.sh",
        "provision.sh"
      ]
    }
  ]
}
